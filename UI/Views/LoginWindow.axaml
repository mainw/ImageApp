<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UI.LoginWindow"
        Title="LoginWindow">
	<StackPanel Margin="20">
		<TextBlock Text="Вход в систему" FontSize="20" HorizontalAlignment="Center"/>
		<TextBox PlaceholderText="Логин" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0"/>
		<PasswordBox Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Пароль" Margin="0,10,0,0"/>
		<Button Content="Войти" Command="{Binding LoginCommand}" Margin="0,20,0,0"/>
		<TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
